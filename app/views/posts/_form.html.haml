= form_for(@post) do |f|
  - if @post.errors.any?
    %div#error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
      - @post.errors.full_messages.each do |msg|
        %li= msg
  %div.fields
    = f.label :title
    = f.text_field :title
    = f.label :body
    = f.text_area :body
  %div.actions
    = f.submit

