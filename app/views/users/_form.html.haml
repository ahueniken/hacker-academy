= form_for(@user) do |f|
  - if @user.errors.any?
    %div#error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
      - @user.errors.full_messages.each do |msg|
        %li= msg
  %div.actions
    = f.label :name
    = f.text_field :name
    = f.label :email
    = f.text_field :email, :type => :email
    = f.label :password
    = f.text_field :password, :type => :password
    = f.submit
