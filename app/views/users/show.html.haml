%h2
  = @user.name
  = "Lvl. #{@user.level} (#{@user.total_score}pts)"
- if @user.is_admin
  %h3 Site Admin

= @user.preferred_language
= @user.year
= @user.program

%h3 Achievements
%ul
  - @user.achievements.each do |achievement|
    %li
      = link_to achievement.name, achievement
      %em= " (#{achievement.value}pts)"
%h3 Dojo Points
%ul
  - @user.dojos.each do |dojo|
    %li
      = dojo.name
      %ul
        %li
          Problem 0:
          = dojo.p0_scores[@user.id.to_s]
          pts
        %li
          Problem 1:
          = dojo.p1_scores[@user.id.to_s]
          pts
        %li
          Problem 2:
          = dojo.p2_scores[@user.id.to_s]
          pts

%hr
.controls
  - if can? :edit, @user
    = link_to 'Edit', edit_user_path(@user)
  = link_to 'Back', users_path

