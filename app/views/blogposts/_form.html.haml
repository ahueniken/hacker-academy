= form_for(@blogpost) do |f|
  - if @blogpost.errors.any?
    %div#error_explanation
      %h2= "#{pluralize(@blogpost.errors.count, "error")} prohibited this blog post from being saved:"
      %ul
      - @blogpost.errors.full_messages.each do |msg|
        %li= msg
  %div.fields
    = f.label :title
    = f.text_field :title
    = f.label :body
    = f.text_area :body
  %div.actions
    = f.submit

